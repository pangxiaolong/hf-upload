{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "target": "es5",
    "module": "commonjs",
    "outDir": "lib",
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "types": [],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["DOM", "ES6", "ES7", "ESNEXT"],
    "declaration": true,
    "declarationDir": "declaration"
  },
  "exclude": ["lib", "node_modules"],
  "include": ["./src"]
}
